{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Scopes",
	"patterns": [
        { "include": "#block_comment" },
        { "include": "#strings" },
        { "include": "#keywords" },
        { "include": "#types" },
        { "include": "#variables" },
        { "include": "#constants" },
        { "include": "#operators" },
        { "include": "#builtin_functions" },
        { "include": "#symbol" }
	],
	"repository": {
		"keywords": {
			"patterns": [
                {
                    "name": "keyword.control.builtin.scopes",
                    "match": "(quote|do|if|elseif|else|return|let|fn|label|(raw)?call|syntax-extend|syntax-log)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
                },
                {
                    "name": "keyword.control.library.scopes",
                    "match": "(var|as|try|except|locals|import|assert|define(((-block)?-scope)?-macro|-infix[\\<\\>])?)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
                }
            ]
		},
		"variables": {
			"patterns": [
                {
                    "name": "constant.language.builtins.scopes",
                    "match": "(debug-build\\?|compiler-(path|timestamp|dir)|syntax-scope|type-kind-(extern|function|integer|real|pointer|vector|array|tuple|union|typename))(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
                },
                {
                    "name": "constant.language.library.scopes",
                    "match": "(package)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
                }
            ]
		},
		"constants": {
			"patterns": [
                {
				    "name": "constant.language.boolean.scopes",
				    "match": "(true|false)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
			    },
                {
				    "name": "constant.language.nothing.scopes",
				    "match": "(none|unnamed)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
			    },
                {
                    "match": "(\\'[^\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#]+)",
                    "name": "constant.character.symbol.scopes"
                },
                {
                    "comment": "Floating point literal (fraction)",
                    "name": "constant.numeric.float.scopes",
                    "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9_]+)?(\\:f32|\\:f64)?\\b"
                },
                {
                    "comment": "Floating point literal (exponent)",
                    "name": "constant.numeric.float.scopes",
                    "match": "\\b[0-9][0-9_]*(\\.[0-9][0-9_]*)?[eE][+-]?[0-9_]+(\\:f32|\\:f64)?\\b"
                },
                {
                    "comment": "Floating point literal (typed)",
                    "name": "constant.numeric.float.scopes",
                    "match": "\\b[0-9][0-9_]*(\\.[0-9][0-9_]*)?([eE][+-]?[0-9_]+)?(\\:f32|\\:f64)\\b"
                },
                {
                    "comment": "Integer literal (decimal)",
                    "name": "constant.numeric.integer.decimal.scopes",
                    "match": "\\b[0-9][0-9_]*(\\:[ui](8|16|32|64|128|s|size))?\\b"
                },
                {
                    "comment": "Integer literal (hexadecimal)",
                    "name": "constant.numeric.integer.hexadecimal.scopes",
                    "match": "\\b0x[a-fA-F0-9_]+(\\:[ui](8|16|32|64|128|s|size))?\\b"
                },
                {
                    "comment": "Integer literal (octal)",
                    "name": "constant.numeric.integer.octal.scopes",
                    "match": "\\b0o[0-7_]+(\\:[ui](8|16|32|64|128|s|size))?\\b"
                },
                {
                    "comment": "Integer literal (binary)",
                    "name": "constant.numeric.integer.binary.scopes",
                    "match": "\\b0b[01_]+(\\:[ui](8|16|32|64|128|s|size))?\\b"
                }                
            ]
		},
		"types": {
            "patterns":[
                {
                    "name": "support.type.builtin.scopes",
                    "match": "(void|bool|usize|u8|u16|u32|u64|i8|i16|i32|i64|f32|f64|type|list|string|integer|real|pointer|array|vector|tuple|union|typename|function|Symbol|Label|Any|Parameter|Syntax|Nothing|Scope|Anchor|Builtin|Exception|extern)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
                },
                {
                    "name": "support.type.library.scopes",
                    "match": "(Macro|rawstring|reference)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
                }
            ]
		},
		"builtin_functions": {
			"patterns": [
                {
                    "name": "support.function.builtin.scopes",
				    "match": "(type-name|superof|string-match\\?|file\\?|exit|compiler-version|load-library|prompt|countof|malloc(-array)?|free|alloca(-array)?|eval|list-load|globals|(pointer|integer|real|function|tuple|array|typename|extern)-type|dump|dump-label|Any-(extract-constant|repr|wrap)|branch|string-join|getelementptr|(volatile-)?(load|store)|storageof|import-c|(type|Scope)\\@|ptrtoint|inttoptr|(insert|extract)value|unconst|compile|typify|purify|(constant|signed)\\?|va(-keys|-countof|\\@)|type-kind|nullof|undef|(type|bitcount)of|icmp[\\=\\!]\\=|icmp[\\<\\>]\\=?[su]|fcmp[\\=\\!]\\=[ou]|fcmp[\\<\\>]\\=?[ou]|bitcast|(fp)?trunc|([sz]|fp)ext|fpto[su]i|[su]itofp|b(and|x?or)|f?add|f?sub|f?mul|[suf](div|rem)|shl|[al]shr)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
                },
                {
                    "name": "support.function.library.scopes",
				    "match": "va-empty\\?|cast|xpcall|(require|char|getattr|(de)?cons|slice|(scope-|block-scope-)?macro|print|min|max|clamp|tie-const|repr|(none|symbol|list|empty|type|integer|real|pointer|array|tuple|typename|Symbol|function-pointer)\\?|(integer|real|pointer|function|array|tuple|function-pointer|typename)-type\\?)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
                },
                {
                    "name": "support.function.sfx.builtin.scopes",
				    "match": "((io-write|set-anchor|set-globals|set-typename(-storage|-super)|compiler-error|abort|unreachable|set-signal-abort|(set|delete)-(type|scope)-symbol)!)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
                },
                {
                    "name": "support.function.sfx.library.scopes",
				    "match": "(((syntax-)?error|todo|raise)!)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
                }
            ]
		},
		"operators": {
            "patterns":[{
                "name": "keyword.operator.scopes",
                "match": "(\\<\\:|and|or|not|\\/\\/|\\@|[\\=\\!\\<\\>]\\=?|[\\.\\?\\+\\-\\*\\/\\%\\&\\|\\^\\~]|\\<\\<|\\>\\>|\\.\\.)(?=[\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#])"
            }]
		},
		"symbol": {
			"patterns": [
				{
					"match": "([^\\s\\(\\)\\[\\]\\{\\}\\,\\;\\#]+)",
					"name": "meta.symbol.scopes"
				}
			]
		},
