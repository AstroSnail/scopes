{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "makescopes",
            "command": "${workspaceRoot}/makescopes",
            "isShellCommand": true,
            "isBuildCommand": true,
            "args": [],
            "showOutput": "always",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|fatal error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "scopes",
            "command": "${workspaceRoot}/scopes",
            "isShellCommand": true,
            "args": [],
            "showOutput": "always",
            "problemMatcher": {
                "owner": "scopes",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|fatal error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "makedocs",
            "command": "cd ${workspaceRoot}/doc && make html",
            "isShellCommand": true,
            "args": [],
            "showOutput": "always"        
        }
    ]    
}